<header>
    <div class="row" id='headerbackground'>
        <div class="col-xs-1">
             <img alt="MonzoLogo" src="https://monzo.com/static/images/mondo-mark-01.png" class="img-responsive" id='logo'/>
        </div>

         <div class="col-xs-9">
              <h1 id="headertitle">Monzo.Locations</h1>
        </div>

         <div class="col-xs-2">
           @if(@ViewData["authenticated"] == "Authenticated")
            {
                <p id='auth' class='authorised'>@ViewData["authenticated"]</p>
            }
            else
            {
                <p id='auth' class='notauthorised'>@ViewData["authenticated"]</p>
            }                       
        </div>
    </div>
</header>

<section class="row">
    @if(@ViewData["authenticated"] == "Authenticated")
    {
        <div id='map' class="col-xs-12"></div>
    }
    else
    {
        <p>Please authorise with an access token</p>
    }
</section>

<section class="row" id='options'>
    <div class='col-xs-2'></div>
    
    <div class='col-xs-3'>
        <span class='inputoption'>Start Date</span> <input type='text' id='startdate' placeholder="yyyymmdd"/>       
    </div>
      <div class='col-xs-3'>     
        <span class='inputoption'>End Date</span> <input type='text' id='enddate' placeholder="yyyymmdd"/>
    </div>
     <div class='col-xs-3'>
        <button type="button" class="btn btn-light" id='retrievebutton'>Retrieve</button>
    </div>
    
     <div class='col-xs-1'></div>
</section>

<footer id='footer'>
    Monzo.Locations &copy 2018
</footer>

  <script
          src="https://code.jquery.com/jquery-2.2.4.min.js"
          integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
          crossorigin="anonymous"></script>
        
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script type='text/javascript' src="~/Scripts/maps.js"></script>
<script type='text/javascript' src=@String.Format("https://maps.googleapis.com/maps/api/js?key={0}&callback=initMap", ViewData["googlemapskey"])></script>